<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/photo_2">
    <LinearLayout android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#c21e252a">
        <Button
            android:id="@+id/round_number"
            android:onClick="addOneRound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ROUND"
            android:textSize="20dp"
            android:textColor="#FF0700"
            android:layout_marginTop="0dp"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="90dp"
            android:background="@drawable/border" />
        <TextView android:id="@+id/round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#c9bbb7a7"
            android:layout_marginBottom="15dp" />
        <RelativeLayout android:id="@+id/main_container_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout android:id="@+id/contents"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <LinearLayout android:id="@+id/teams_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#fafafa"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Smith"/>
                    <TextView
                        android:id="@+id/player_a_score"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#b9bbb7a7"
                        android:textSize="80sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-light"
                        android:layout_margin="20dp"
                        android:background="@drawable/light" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/button3_a"
                            android:onClick="addOneForPlayerA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Punch"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:layout_marginVertical="5dp"
                            android:background="#99D6151F"
                            android:textColor="#b9bbb7a7"/>
                        <Button
                            android:onClick="addTwoForPlayerA"
                            android:id="@+id/button2_a"
                            android:layout_below="@+id/button3_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kicks"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:layout_marginVertical="5dp"
                            android:background="#99D6151F"
                            android:textColor="#b9bbb7a7"/>
                        <Button
                            android:onClick="subtractOnePlayerA"
                            android:layout_below="@+id/button2_a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fouls"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:layout_marginVertical="5dp"
                            android:background="#99D6151F"
                            android:textColor="#b9bbb7a7"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    tools:context = ".MainActivity">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#fafafa"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Anderson"/>
                    <TextView
                        android:id="@+id/player_b_score"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#b9bbb7a7"
                        android:textSize="80sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-light"
                        android:padding="0dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/light"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:onClick="addOneForPlayerB"
                            android:text="Punch"
                            android:textColor="#b9bbb7a7"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:background="#99D6151F"
                            android:layout_marginVertical="5dp"/>
                        <Button
                            android:onClick="addTwoForPlayerB"
                            android:id="@+id/button2"
                            android:layout_below="@+id/button3"
                            android:text="Kicks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:textColor="#b9bbb7a7"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:background="#99D6151F"
                            android:paddingVertical="2dp"
                            android:layout_marginVertical="5dp" />
                        <Button
                            android:onClick="subtractOnePlayerB"
                            android:layout_below="@+id/button2"
                            android:paddingVertical="2dp"
                            android:layout_marginVertical="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fouls"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:textColor="#b9bbb7a7"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:background="#99D6151F" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="resetScore"
            android:text="Reset"
            android:textSize="17dp"
            android:layout_marginBottom="0dp"
            android:layout_marginHorizontal="120dp"
            android:paddingVertical="10dp"/>
       </RelativeLayout>
    </LinearLayout>
</ScrollView>








